<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" 
            fx:controller="com.vunguard.controllers.TransactionController"
            prefHeight="768.0" prefWidth="1366.0" style="-fx-background-color: #12121A;">
    <left>
        <fx:include fx:id="sidebarView" source="SidebarView.fxml" />
    </left>
    <center>
        <ScrollPane fitToWidth="true" styleClass="dashboard-scroll-pane" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <content>
                <VBox fx:id="contentArea" alignment="TOP_LEFT" spacing="20.0" style="-fx-background-color: #1E1E2C; -fx-padding: 30;">
                    <children>
                        <!-- Main Header and New Transaction Button -->
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="Transactions" style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="newTransactionButton" text="Record Transaction" 
                                        style="-fx-background-color: #0A84FF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;">
                                    <padding>
                                        <Insets left="15" right="15" top="8" bottom="8" />
                                    </padding>
                                </Button>
                            </children>
                        </HBox>
                        
                        <!-- Description -->
                        <Label text="View and manage all your investment transactions." 
                               style="-fx-text-fill: #A0A0A0; -fx-font-size: 14px;"/>
                        
                        <!-- Filter Section -->
                        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 15 0;">
                            <children>
                                <Label text="Filter by:" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                                <ComboBox fx:id="typeFilter" promptText="All Types" prefWidth="150" />
                                <ComboBox fx:id="portfolioFilter" promptText="All Portfolios" prefWidth="150" />
                                <ComboBox fx:id="statusFilter" promptText="All Statuses" prefWidth="150" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="clearFiltersButton" text="Clear Filters" 
                                        style="-fx-background-color: transparent; -fx-border-color: #6B7280; -fx-border-radius: 4; -fx-text-fill: #E5E7EB;">
                                    <padding>
                                        <Insets left="15" right="15" top="5" bottom="5" />
                                    </padding>
                                </Button>
                            </children>
                        </HBox>
                        
                        <!-- Transaction Table -->
                        <TableView fx:id="transactionTable" style="-fx-background-color: #2A2A3A; -fx-text-fill: white; -fx-padding: 10;" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="idColumn" text="ID" prefWidth="100.0" />
                                <TableColumn fx:id="typeColumn" text="Type" prefWidth="120.0" />
                                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200.0" />
                                <TableColumn fx:id="amountColumn" text="Amount" prefWidth="120.0" />
                                <TableColumn fx:id="portfolioColumn" text="Portfolio" prefWidth="150.0" />
                                <TableColumn fx:id="dateColumn" text="Date" prefWidth="150.0" />
                                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100.0" />
                                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150.0" minWidth="150.0" />
                            </columns>
                            <placeholder>
                                <Label text="No transactions found. Click 'Record Transaction' to record one." style="-fx-text-fill: #A0A0A0;" />
                            </placeholder>
                        </TableView>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane> 