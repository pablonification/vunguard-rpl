<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" 
            fx:controller="com.vunguard.controllers.PerformanceController"
            prefHeight="768.0" prefWidth="1366.0" style="-fx-background-color: #12121A;">
    <left>
        <fx:include fx:id="sidebarView" source="SidebarView.fxml" />
    </left>
    <center>
        <ScrollPane fitToWidth="true" styleClass="dashboard-scroll-pane" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <content>
                <VBox fx:id="contentArea" alignment="TOP_LEFT" spacing="20.0" style="-fx-background-color: #1E1E2C; -fx-padding: 30;">
                    <children>
                        <!-- Header -->
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="Performance" style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="refreshButton" text="Refresh Data" 
                                        style="-fx-background-color: #6B7280; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;">
                                    <padding>
                                        <Insets left="15" right="15" top="8" bottom="8" />
                                    </padding>
                                </Button>
                            </children>
                        </HBox>
                        
                        <!-- Description -->
                        <Label text="Track and analyze your investment performance across all portfolios." 
                               style="-fx-text-fill: #A0A0A0; -fx-font-size: 14px;"/>
                        
                        <!-- Time Range Filter -->
                        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 15 0;">
                            <children>
                                <Label text="Time Range:" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                                <ComboBox fx:id="timeRangeFilter" promptText="Select Range" prefWidth="150" />
                                <Label text="Portfolio:" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                                <ComboBox fx:id="portfolioFilter" promptText="All Portfolios" prefWidth="150" />
                            </children>
                        </HBox>
                        
                        <!-- Performance Summary Cards -->
                        <VBox fx:id="summarySection" spacing="20.0" style="-fx-padding: 20 0;">
                            <!-- Cards will be added programmatically -->
                        </VBox>
                        
                        <!-- Charts Section -->
                        <VBox fx:id="chartsSection" spacing="20.0" style="-fx-padding: 20 0;">
                            <!-- Charts will be added programmatically -->
                        </VBox>
                        
                        <!-- Performance Details Section -->
                        <VBox fx:id="detailsSection" spacing="20.0" style="-fx-padding: 20 0;">
                            <!-- Details will be added programmatically -->
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>