<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Text?>

<ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true" 
           style="-fx-background: #12121A; -fx-background-color: #12121A;" 
           hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
           prefWidth="900.0" prefHeight="750.0"
           xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" 
           fx:controller="com.vunguard.controllers.RegistrationController">
    
    <content>
        <VBox fx:id="rootPane" alignment="CENTER" spacing="20.0" 
              style="-fx-background-color: #12121A; -fx-padding: 30;" 
              minWidth="800.0" prefHeight="680.0">
            <children>
                <ImageView fitHeight="40.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../assets/logo_white.png" />
                    </image>
                </ImageView>

                <Text fill="WHITE" style="-fx-font-family: 'Inter 18pt'; -fx-font-size: 18px; -fx-font-weight: bold;" text="Register" />

                <Text fill="WHITE" style="-fx-font-family: 'Inter 18pt'; -fx-font-size: 14px;" text="Create a new account to get started" />

                <VBox alignment="CENTER_LEFT" maxWidth="450.0" minWidth="400.0" spacing="12.0" 
                      style="-fx-background-color: #1E1E2C; -fx-padding: 30; -fx-background-radius: 10;">
                    <children>

                        <Label style="-fx-text-fill: #B0B0B0; -fx-font-family: 'Inter 18pt'; -fx-font-size: 13px;" text="Full Name" />
                        <TextField fx:id="fullNameField" promptText="Enter your full name" 
                                  style="-fx-background-color: #2A2A3A; -fx-text-fill: white; -fx-font-family: 'Inter 18pt'; -fx-background-radius: 5; -fx-border-color: #3A3A4A; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 13px;" 
                                  prefHeight="38.0" />

                        <Label style="-fx-text-fill: #B0B0B0; -fx-font-family: 'Inter 18pt'; -fx-font-size: 13px;" text="Email" />
                        <TextField fx:id="emailField" promptText="Enter your email" 
                                  style="-fx-background-color: #2A2A3A; -fx-text-fill: white; -fx-font-family: 'Inter 18pt'; -fx-background-radius: 5; -fx-border-color: #3A3A4A; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 13px;" 
                                  prefHeight="38.0" />
                    
                        <Label style="-fx-text-fill: #B0B0B0; -fx-font-family: 'Inter 18pt'; -fx-font-size: 13px;" text="Username" />
                        <TextField fx:id="usernameField" promptText="Enter your username" 
                                  style="-fx-background-color: #2A2A3A; -fx-text-fill: white; -fx-font-family: 'Inter 18pt'; -fx-background-radius: 5; -fx-border-color: #3A3A4A; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 13px;" 
                                  prefHeight="38.0" />

                        <Label style="-fx-text-fill: #B0B0B0; -fx-font-family: 'Inter 18pt'; -fx-font-size: 13px;" text="Password" />
                        <PasswordField fx:id="passwordField" promptText="Choose a password" 
                                      style="-fx-background-color: #2A2A3A; -fx-text-fill: white; -fx-font-family: 'Inter 18pt'; -fx-background-radius: 5; -fx-border-color: #3A3A4A; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 13px;" 
                                      prefHeight="38.0" />

                        <Label style="-fx-text-fill: #B0B0B0; -fx-font-family: 'Inter 18pt'; -fx-font-size: 13px;" text="Confirm Password" />
                        <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" 
                                      style="-fx-background-color: #2A2A3A; -fx-text-fill: white; -fx-font-family: 'Inter 18pt'; -fx-background-radius: 5; -fx-border-color: #3A3A4A; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 13px;" 
                                      prefHeight="38.0" />

                        <!-- Role Selection Section -->
                        <Label style="-fx-text-fill: #B0B0B0; -fx-font-family: 'Inter 18pt'; -fx-font-size: 13px;" text="What are you?" />
                        <HBox spacing="8" alignment="CENTER">
                            <children>
                                <Button fx:id="investorButton" text="Investor" onAction="#handleInvestorRole" 
                                        style="-fx-background-color: #3A3A4A; -fx-text-fill: #B0B0B0; -fx-font-family: 'Inter 18pt'; -fx-font-size: 12px; -fx-background-radius: 15; -fx-border-radius: 15; -fx-padding: 6 12;" 
                                        prefWidth="95" prefHeight="32" />
                                <Button fx:id="managerButton" text="Manager" onAction="#handleManagerRole" 
                                        style="-fx-background-color: #3A3A4A; -fx-text-fill: #B0B0B0; -fx-font-family: 'Inter 18pt'; -fx-font-size: 12px; -fx-background-radius: 15; -fx-border-radius: 15; -fx-padding: 6 12;" 
                                        prefWidth="95" prefHeight="32" />
                                <Button fx:id="analystButton" text="Analyst" onAction="#handleAnalystRole" 
                                        style="-fx-background-color: #3A3A4A; -fx-text-fill: #B0B0B0; -fx-font-family: 'Inter 18pt'; -fx-font-size: 12px; -fx-background-radius: 15; -fx-border-radius: 15; -fx-padding: 6 12;" 
                                        prefWidth="95" prefHeight="32" />
                            </children>
                        </HBox>

                        <Button fx:id="registerButton" defaultButton="true" maxWidth="Infinity" onAction="#handleRegisterAction" 
                                style="-fx-background-color: #6EE7B7; -fx-text-fill: #12121A; -fx-font-family: 'Inter 18pt'; -fx-font-weight: bold; -fx-padding: 12 0; -fx-background-radius: 5; -fx-font-size: 15px;" 
                                text="Register" prefHeight="42.0" />

                        <HBox alignment="CENTER" spacing="5.0" style="-fx-padding: 10 0 0 0;">
                            <children>
                                <Text fill="#B0B0B0" style="-fx-font-family: 'Inter 18pt'; -fx-font-size: 13px;" text="Already have an account?" />
                                <Hyperlink fx:id="loginLink" onAction="#handleLoginAction" style="-fx-text-fill: #6EE7B7; -fx-font-family: 'Inter 18pt'; -fx-font-size: 13px;" text="Login" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Small spacing at the bottom -->
                <Region prefHeight="15" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </content>
</ScrollPane>