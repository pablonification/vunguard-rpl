<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vunguard.controllers.CreateRecommendationController" 
      spacing="20.0" style="-fx-background-color: #2A2A3A; -fx-background-radius: 8;" prefWidth="600.0" prefHeight="700.0">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT">
        <Label text="Create New Recommendation" style="-fx-font-family: 'Inter'; -fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="closeButton" onAction="#handleClose" text="âœ•" style="-fx-background-color: transparent; -fx-text-fill: #A0A0A0; -fx-font-size: 16px; -fx-padding: 5;" />
    </HBox>
    
    <!-- Form Content -->
    <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" VBox.vgrow="ALWAYS">
        <VBox spacing="20.0">
            <!-- Basic Information -->
            <GridPane hgap="15.0" vgap="15.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="280.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="280.0" />
                </columnConstraints>
                
                <!-- Product Selection -->
                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Product" style="-fx-font-family: 'Inter'; -fx-font-size: 14px; -fx-text-fill: #FFFFFF;" />
                    <ComboBox fx:id="productComboBox" promptText="Select a product" style="-fx-background-color: #1E1E2C; -fx-text-fill: #FFFFFF; -fx-font-family: 'Inter';" prefWidth="260.0" />
                </VBox>
                
                <!-- Recommendation Type -->
                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Recommendation Type" style="-fx-font-family: 'Inter'; -fx-font-size: 14px; -fx-text-fill: #FFFFFF;" />
                    <ComboBox fx:id="typeComboBox" style="-fx-background-color: #1E1E2C; -fx-text-fill: #FFFFFF; -fx-font-family: 'Inter';" prefWidth="260.0" />
                </VBox>
                
                <!-- Current Price -->
                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="Current Price" style="-fx-font-family: 'Inter'; -fx-font-size: 14px; -fx-text-fill: #FFFFFF;" />
                    <TextField fx:id="currentPriceField" promptText="0.00" style="-fx-background-color: #1E1E2C; -fx-text-fill: #FFFFFF; -fx-font-family: 'Inter';" prefWidth="260.0" />
                </VBox>
                
                <!-- Target Price -->
                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label text="Target Price" style="-fx-font-family: 'Inter'; -fx-font-size: 14px; -fx-text-fill: #FFFFFF;" />
                    <TextField fx:id="targetPriceField" promptText="0.00" style="-fx-background-color: #1E1E2C; -fx-text-fill: #FFFFFF; -fx-font-family: 'Inter';" prefWidth="260.0" />
                </VBox>
                
                <!-- Confidence Level -->
                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <Label text="Confidence Level (1-5)" style="-fx-font-family: 'Inter'; -fx-font-size: 14px; -fx-text-fill: #FFFFFF;" />
                    <ComboBox fx:id="confidenceComboBox" style="-fx-background-color: #1E1E2C; -fx-text-fill: #FFFFFF; -fx-font-family: 'Inter';" prefWidth="260.0" />
                </VBox>
                
                <!-- Timeframe -->
                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <Label text="Timeframe" style="-fx-font-family: 'Inter'; -fx-font-size: 14px; -fx-text-fill: #FFFFFF;" />
                    <ComboBox fx:id="timeframeComboBox" style="-fx-background-color: #1E1E2C; -fx-text-fill: #FFFFFF; -fx-font-family: 'Inter';" prefWidth="260.0" />
                </VBox>
            </GridPane>
            
            <!-- Rationale -->
            <VBox spacing="5.0">
                <Label text="Rationale" style="-fx-font-family: 'Inter'; -fx-font-size: 14px; -fx-text-fill: #FFFFFF;" />
                <TextArea fx:id="rationaleTextArea" promptText="Explain your recommendation..." wrapText="true" 
                         style="-fx-background-color: #1E1E2C; -fx-text-fill: #FFFFFF; -fx-font-family: 'Inter';" 
                         prefRowCount="3" />
            </VBox>
            
            <!-- Analysis Sections -->
            <GridPane hgap="15.0" vgap="15.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0" />
                </columnConstraints>
                
                <!-- Technical Analysis -->
                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Technical Analysis" style="-fx-font-family: 'Inter'; -fx-font-size: 14px; -fx-text-fill: #FFFFFF;" />
                    <TextArea fx:id="technicalAnalysisTextArea" promptText="Technical analysis..." wrapText="true"
                             style="-fx-background-color: #1E1E2C; -fx-text-fill: #FFFFFF; -fx-font-family: 'Inter';" 
                             prefRowCount="4" prefWidth="180.0" />
                </VBox>
                
                <!-- Fundamental Analysis -->
                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Fundamental Analysis" style="-fx-font-family: 'Inter'; -fx-font-size: 14px; -fx-text-fill: #FFFFFF;" />
                    <TextArea fx:id="fundamentalAnalysisTextArea" promptText="Fundamental analysis..." wrapText="true"
                             style="-fx-background-color: #1E1E2C; -fx-text-fill: #FFFFFF; -fx-font-family: 'Inter';" 
                             prefRowCount="4" prefWidth="180.0" />
                </VBox>
                
                <!-- Risks -->
                <VBox spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <Label text="Risks" style="-fx-font-family: 'Inter'; -fx-font-size: 14px; -fx-text-fill: #FFFFFF;" />
                    <TextArea fx:id="risksTextArea" promptText="Potential risks..." wrapText="true"
                             style="-fx-background-color: #1E1E2C; -fx-text-fill: #FFFFFF; -fx-font-family: 'Inter';" 
                             prefRowCount="4" prefWidth="180.0" />
                </VBox>
            </GridPane>
        </VBox>
    </ScrollPane>
    
    <!-- Action Buttons -->
    <HBox spacing="15.0" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" 
                style="-fx-background-color: #4A4A5A; -fx-text-fill: #FFFFFF; -fx-font-family: 'Inter'; -fx-background-radius: 6; -fx-padding: 8 16;" />
        <Button fx:id="createButton" onAction="#handleCreate" text="Create Recommendation" 
                style="-fx-background-color: #22C55E; -fx-text-fill: #FFFFFF; -fx-font-family: 'Inter'; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;" />
    </HBox>
</VBox> 