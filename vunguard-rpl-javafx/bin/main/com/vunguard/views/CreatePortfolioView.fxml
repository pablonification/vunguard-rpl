<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true" 
           style="-fx-background: #12121A; -fx-background-color: #12121A;" 
           hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
           prefWidth="600.0" prefHeight="400.0"
           xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21">
    
    <content>
        <VBox fx:id="rootPane" alignment="TOP_LEFT" spacing="25.0" 
              style="-fx-background-color: #12121A; -fx-padding: 40;" 
              minWidth="520.0" prefHeight="350.0">
            <children>
                <!-- Header -->
                <VBox spacing="8">
                    <children>
                        <Label text="Create Portfolio" 
                               style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" />
                        <Label text="Create a new investment portfolio to manage your assets." 
                               style="-fx-text-fill: #A0A0A0; -fx-font-size: 14px;" />
                    </children>
                </VBox>

                <!-- Form Section -->
                <VBox spacing="20.0" style="-fx-padding: 20 0 0 0;">
                    <children>
                        <Label text="New Portfolio" 
                               style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
                        <Label text="Enter the details for the new portfolio." 
                               style="-fx-text-fill: #A0A0A0; -fx-font-size: 14px;" />

                        <!-- Portfolio Name -->
                        <VBox spacing="8">
                            <children>
                                <Label text="Portfolio Name" 
                                       style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 500;" />
                                <TextField fx:id="nameField" promptText="Enter portfolio name" 
                                          style="-fx-background-color: #2A2A3A; -fx-text-fill: white; -fx-background-radius: 6; -fx-border-color: #3A3A4A; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14px; -fx-prompt-text-fill: #A0A0A0;" 
                                          prefHeight="44.0" />
                            </children>
                        </VBox>

                        <!-- Description -->
                        <VBox spacing="8">
                            <children>
                                <Label text="Description (Optional)" 
                                       style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 500;" />
                                <TextArea fx:id="descriptionField" promptText="Enter portfolio description" 
                                          style="-fx-background-color: #2A2A3A; -fx-text-fill: white; -fx-background-radius: 6; -fx-border-color: #3A3A4A; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14px; -fx-prompt-text-fill: #A0A0A0;" 
                                          prefHeight="80.0" wrapText="true" />
                            </children>
                        </VBox>

                        <!-- Buttons -->
                        <HBox spacing="12.0" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
                            <children>
                                <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancelAction"
                                        style="-fx-background-color: transparent; -fx-border-color: #6B7280; -fx-border-radius: 6; -fx-text-fill: #E5E7EB; -fx-font-weight: 500; -fx-padding: 12 24; -fx-background-radius: 6; -fx-font-size: 14px;" 
                                        prefHeight="44.0" />
                                
                                <Button fx:id="createButton" defaultButton="true" text="Create Portfolio" onAction="#handleCreateAction"
                                        style="-fx-background-color: #10B981; -fx-text-fill: white; -fx-font-weight: 600; -fx-padding: 12 24; -fx-background-radius: 6; -fx-font-size: 14px;" 
                                        prefHeight="44.0" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </content>
</ScrollPane>