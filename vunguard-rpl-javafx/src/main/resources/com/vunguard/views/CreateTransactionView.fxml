<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Region?>

<ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true" 
           style="-fx-background: #12121A; -fx-background-color: #12121A;" 
           hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
           prefWidth="700.0" prefHeight="600.0"
           xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21">
    
    <content>
        <VBox fx:id="rootPane" alignment="TOP_LEFT" spacing="25.0" 
              style="-fx-background-color: #12121A; -fx-padding: 40;" 
              minWidth="620.0" prefHeight="550.0">
            <children>
                <!-- Header -->
                <VBox spacing="8">
                    <children>
                <Label text="Record Transaction" 
                               style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" />
                        <Label text="Record a new investment transaction." 
                               style="-fx-text-fill: #A0A0A0; -fx-font-size: 14px;" />
                    </children>
                </VBox>

                <!-- Form Section -->
                <VBox spacing="20.0" style="-fx-padding: 20 0 0 0;">
                    <children>
                        <Label text="Transaction Details" 
                               style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
                        <Label text="Enter the details of the transaction." 
                               style="-fx-text-fill: #A0A0A0; -fx-font-size: 14px;" />

                        <!-- Form Grid -->
                        <GridPane hgap="20" vgap="20" style="-fx-padding: 10 0 0 0;">
                            <!-- <columnConstraints>
                                <ColumnConstraints prefWidth="280.0" />
                                <ColumnConstraints prefWidth="280.0" />
                            </columnConstraints> -->

                            <!-- Row 0: Investor -->
                            <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <children>
                                    <Label text="Investor" 
                                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 500;" />
                                    <ComboBox fx:id="investorComboBox" promptText="Select an investor" 
                                             style="-fx-background-color: #2A2A3A; -fx-text-fill: white; -fx-background-radius: 6; -fx-border-color: #3A3A4A; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14px; -fx-prompt-text-fill: #A0A0A0;" 
                                             prefHeight="44.0" maxWidth="Infinity" />
                                </children>
                            </VBox>

                            <!-- Row 0: Portfolio -->
                            <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <children>
                                    <Label text="Portfolio" 
                                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 500;" />
                                    <ComboBox fx:id="portfolioComboBox" promptText="Select an investor first" disable="true"
                                             style="-fx-background-color: #2A2A3A; -fx-text-fill: white; -fx-background-radius: 6; -fx-border-color: #3A3A4A; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14px; -fx-prompt-text-fill: #A0A0A0;" 
                                             prefHeight="44.0" maxWidth="Infinity" />
                                </children>
                            </VBox>

                            <!-- Row 1: Product -->
                            <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <children>
                                    <Label text="Product" 
                                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 500;" />
                                    <ComboBox fx:id="productComboBox" promptText="Select a portfolio first" disable="true"
                                             style="-fx-background-color: #2A2A3A; -fx-text-fill: white; -fx-background-radius: 6; -fx-border-color: #3A3A4A; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14px; -fx-prompt-text-fill: #A0A0A0;" 
                                             prefHeight="44.0" maxWidth="Infinity" />
                                </children>
                            </VBox>

                            <!-- Row 1: Transaction Type -->
                            <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <children>
                                    <Label text="Transaction Type" 
                                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 500;" />
                                    <ComboBox fx:id="typeComboBox" promptText="Buy"
                                             style="-fx-background-color: #2A2A3A; -fx-text-fill: white; -fx-background-radius: 6; -fx-border-color: #3A3A4A; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14px; -fx-prompt-text-fill: #A0A0A0;" 
                                             prefHeight="44.0" maxWidth="Infinity" />
                                </children>
                            </VBox>

                            <!-- Row 2: Quantity -->
                            <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                <children>
                                    <Label text="Quantity" 
                                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 500;" />
                                    <TextField fx:id="quantityField" promptText="0" 
                                              style="-fx-background-color: #2A2A3A; -fx-text-fill: white; -fx-background-radius: 6; -fx-border-color: #3A3A4A; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14px; -fx-prompt-text-fill: #A0A0A0;" 
                                              prefHeight="44.0" />
                                </children>
                            </VBox>

                            <!-- Row 2: Price per Unit -->
                            <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                <children>
                                    <Label text="Price per Unit" 
                                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 500;" />
                                    <TextField fx:id="priceField" promptText="0.00" 
                                              style="-fx-background-color: #2A2A3A; -fx-text-fill: white; -fx-background-radius: 6; -fx-border-color: #3A3A4A; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14px; -fx-prompt-text-fill: #A0A0A0;" 
                                              prefHeight="44.0" />
                                </children>
                            </VBox>

                            <!-- Row 3: Total Amount (Calculated) -->
                            <VBox spacing="8" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                                <children>
                                    <Label text="Total Amount (Calculated)" 
                                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 500;" />
                                    <TextField fx:id="totalField" text="0.00" editable="false"
                                              style="-fx-background-color: #1A1A2E; -fx-text-fill: #A0A0A0; -fx-background-radius: 6; -fx-border-color: #3A3A4A; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14px;" 
                                              prefHeight="44.0" />
                                </children>
                            </VBox>

                            <!-- Row 4: Notes (Optional) -->
                            <VBox spacing="8" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4">
                                <children>
                                    <Label text="Notes (Optional)" 
                                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 500;" />
                                    <TextArea fx:id="notesField" promptText="Add any additional notes about this transaction..." 
                                             style="-fx-background-color: #2A2A3A; -fx-text-fill: white; -fx-background-radius: 6; -fx-border-color: #3A3A4A; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14px; -fx-prompt-text-fill: #A0A0A0;" 
                                             prefHeight="80.0" wrapText="true" />
                                </children>
                            </VBox>
                        </GridPane>

                        <!-- Buttons -->
                        <HBox spacing="12.0" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
                            <children>
                                <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancelAction"
                                        style="-fx-background-color: transparent; -fx-border-color: #6B7280; -fx-border-radius: 6; -fx-text-fill: #E5E7EB; -fx-font-weight: 500; -fx-padding: 12 24; -fx-background-radius: 6; -fx-font-size: 14px;" 
                                        prefHeight="44.0" />
                                
                                <Button fx:id="createButton" defaultButton="true" text="Record Transaction" onAction="#handleCreateAction"
                                        style="-fx-background-color: #10B981; -fx-text-fill: white; -fx-font-weight: 600; -fx-padding: 12 24; -fx-background-radius: 6; -fx-font-size: 14px;" 
                                        prefHeight="44.0" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </content>
</ScrollPane>