<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" 
            fx:controller="com.vunguard.controllers.PortfolioController"
            prefHeight="768.0" prefWidth="1366.0" style="-fx-background-color: #12121A;">
    <left>
        <fx:include fx:id="sidebarView" source="SidebarView.fxml" />
    </left>
    <center>
        <ScrollPane fitToWidth="true" styleClass="dashboard-scroll-pane" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <content>
                <VBox fx:id="contentArea" alignment="TOP_LEFT" spacing="20.0" style="-fx-background-color: #1E1E2C; -fx-padding: 30;">
                    <children>
                        <!-- Main Header and Create Button -->
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <VBox spacing="5">
                                    <children>
                                        <Label text="Portfolios" style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                                        <Label text="Manage your investment portfolios and track their performance." 
                                               style="-fx-text-fill: #A0A0A0; -fx-font-size: 14px;"/>
                                    </children>
                                </VBox>
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="createPortfolioButton" text="+ Create Portfolio" 
                                        style="-fx-background-color: #10B981; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 10 16; -fx-font-size: 14px;"/>
                            </children>
                        </HBox>
                        
                        <!-- Investor Selection Section (for managers/analysts) -->
                        <VBox fx:id="investorSelectionSection" spacing="10.0" style="-fx-padding: 20 0;">
                            <children>
                                <Label text="Investor Selection" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                                <Label text="Select an investor to view their portfolio data" 
                                       style="-fx-text-fill: #A0A0A0; -fx-font-size: 14px;"/>
                                <ComboBox fx:id="investorSelectionComboBox" promptText="Select investor..." prefWidth="300"
                                         style="-fx-background-color: #2A2A3A; -fx-text-fill: white; -fx-border-color: #3A3A4A; -fx-border-radius: 4; -fx-background-radius: 4;"/>
                            </children>
                        </VBox>
                        
                        <!-- Your Portfolios Section -->
                        <VBox spacing="15.0" style="-fx-padding: 20 0 0 0;">
                            <children>
                                <VBox spacing="5">
                                    <children>
                                        <Label text="Your Portfolios" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                                        <Label text="Manage and monitor your investment portfolios."
                                               style="-fx-text-fill: #A0A0A0; -fx-font-size: 14px;"/>
                                    </children>
                                </VBox>
                                
                                <!-- Table Section -->
                                <VBox style="-fx-background-color: #2A2A3A; -fx-border-color: #3A3A4A; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20;">
                                    <children>
                                        <TableView fx:id="portfolioTable" style="-fx-background-color: transparent; -fx-text-fill: white;" prefHeight="400">
                                            <columns>
                                                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150.0" />
                                                <TableColumn fx:id="assetValueColumn" text="Asset Value" prefWidth="120.0" />
                                                <TableColumn fx:id="cashBalanceColumn" text="Cash Balance" prefWidth="120.0" />
                                                <TableColumn fx:id="totalValueColumn" text="Total Value" prefWidth="120.0" />
                                                <TableColumn fx:id="returnColumn" text="Return" prefWidth="100.0" />
                                                <TableColumn fx:id="assetsColumn" text="Assets" prefWidth="100.0" />
                                                <TableColumn fx:id="lastUpdatedColumn" text="Last Updated" prefWidth="150.0" />
                                                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="100.0" minWidth="100.0" />
                                            </columns>
                                            <placeholder>
                                                <Label text="No portfolios found. Create your first portfolio to get started." style="-fx-text-fill: #A0A0A0;" />
                                            </placeholder>
                                        </TableView>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>